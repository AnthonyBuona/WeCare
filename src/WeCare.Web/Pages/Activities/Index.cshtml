@page
@using WeCare.Web.Pages.Activities
@using WeCare.Localization
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<WeCareResource> L
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@using WeCare.Permissions
@section scripts
{
    <abp-script src="/Pages/Activities/index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Activities"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                @if (await AuthorizationService.IsGrantedAsync(WeCarePermissions.Activities.Create))
                {
                    <abp-button id="NewActivityButton"
                                text="@L["NewActivity"].Value"
                                icon="plus"
                                button-type="Primary" />
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="ActivitiesTable"></abp-table>
    </abp-card-body>
</abp-card>
