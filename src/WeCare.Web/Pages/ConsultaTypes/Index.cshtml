@page
@model WeCare.Web.Pages.Tratamentos.IndexModel
@using WeCare.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WeCareResource> L
@{
    ViewData["Title"] = L["Menu:Tratamentos"];
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <h2>@L["Menu:Tratamentos"]</h2>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewTratamentoButton"
                            text="@L["NewTratamento"]"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table id="TratamentosTable" class="nowrap"></abp-table>
    </abp-card-body>
</abp-card>