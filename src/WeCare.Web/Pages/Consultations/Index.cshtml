@page
@model WeCare.Web.Pages.Consultations.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@using WeCare.Localization
@inject IHtmlLocalizer<WeCareResource> L
@section scripts {
    <abp-script src="/Pages/Consultations/index.js" />
}
<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["Consultations"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewConsultationButton"
                            text="@L["NewConsultation"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table id="ConsultationsTable" class="nowrap"></abp-table>
    </abp-card-body>
</abp-card>