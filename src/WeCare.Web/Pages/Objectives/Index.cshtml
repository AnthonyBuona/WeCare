@page
@using WeCare.Web.Pages.Objectives
@using WeCare.Permissions
@using Microsoft.AspNetCore.Authorization
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using WeCare.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<WeCareResource> L
@inject IAuthorizationService AuthorizationService
@inject IPageLayout PageLayout
@model IndexModel
@{
    ViewBag.Title = L["Objectives"].Value;
    PageLayout.Content.Title = L["Objectives"].Value;
    PageLayout.Content.BreadCrumb.Add(L["Menu:Objectives"].Value);
    PageLayout.Content.MenuItemName = "Objectives"; 
}

@section scripts {
    <abp-script src="/Pages/Objectives/index.js" />
}

<div class="row mb-4 align-items-center justify-content-between">
    <div class="col-md-6 col-12 mb-3 mb-md-0">
        <div class="d-flex align-items-center">
            <div class="icon-shape bg-gradient-success text-white rounded-circle shadow me-3">
                <i class="fa fa-bullseye"></i>
            </div>
            <div>
                <h2 class="mb-0 text-dark fw-bold">@L["Objectives"]</h2>
                <p class="text-muted mb-0">Defina metas e planos de acompanhamento</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-12 text-md-end">
        @if (await AuthorizationService.IsGrantedAsync(WeCarePermissions.Objectives.Create))
        {
            <button id="NewObjectiveButton" class="btn btn-premium btn-lg px-4 rounded-pill shadow-sm">
                <i class="fa fa-plus me-2"></i> @L["NewObjective"].Value
            </button>
        }
    </div>
</div>

<div class="card border-0 shadow-sm rounded-3 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <abp-table id="ObjectivesTable" class="table align-items-center table-flush table-hover mb-0" />
        </div>
    </div>
</div>
