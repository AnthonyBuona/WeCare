@page
@using WeCare.Localization
@using WeCare.Permissions
@using WeCare.Web.Pages.Patients
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@model IndexModel
@inject IStringLocalizer<WeCareResource> L
@inject IAuthorizationService AuthorizationService
@section scripts
{
    <abp-script src="/Pages/Patients/index.js" />
}
<div class="row mb-4 align-items-center justify-content-between">
    <div class="col-md-6 col-12 mb-3 mb-md-0">
        <div class="d-flex align-items-center">
            <div class="icon-shape bg-gradient-primary text-white rounded-circle shadow me-3">
                <i class="fa fa-users"></i>
            </div>
            <div>
                <h2 class="mb-0 text-dark fw-bold">@L["Patients"]</h2>
                <p class="text-muted mb-0">Gerencie perfis, responsáveis e históricos</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-12 text-md-end">
        @if (await AuthorizationService.IsGrantedAsync(WeCarePermissions.Patients.Create))
        {
            <button id="NewPatientButton" class="btn btn-premium btn-lg px-4 rounded-pill shadow-sm">
                <i class="fa fa-plus me-2"></i> @L["Novo Paciente"].Value
            </button>
        }
    </div>
</div>

<div class="card border-0 shadow-sm rounded-3 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <abp-table id="PatientsTable" class="table align-items-center table-flush table-hover mb-0" />
        </div>
    </div>
</div>