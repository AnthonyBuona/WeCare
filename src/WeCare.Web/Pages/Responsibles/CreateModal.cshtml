@page
@using WeCare.Localization
@using WeCare.Web.Pages.Responsibles
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WeCare.Web.Pages.Responsibles.CreateModalModel

@inject IStringLocalizer<WeCareResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Responsible" asp-page="/Responsibles/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewResponsible"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>

