@page
@model WeCare.Web.Pages.Session.RecordModel
@using WeCare.Localization
@using WeCare.Web.Menus
@using Volo.Abp.AspNetCore.Mvc.UI.Layout
@using Microsoft.AspNetCore.Mvc.Localization
@inject IPageLayout PageLayout
@inject IHtmlLocalizer<WeCareResource> L
@{
    PageLayout.Content.MenuItemName = WeCareMenus.Scheduling;
    ViewBag.PageTitle = "Sessão em Andamento";
}

@section styles {
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" />
    <style>
        :root {
            --session-primary: #5e72e4;
            --session-primary-dark: #4a5bc7;
            --session-accent: #825ee4;
            --session-success: #2dce89;
            --session-warning: #fb6340;
            --session-bg: #f7f8fc;
            --session-card: #ffffff;
            --session-text: #32325d;
            --session-text-muted: #8898aa;
            --session-border: #e9ecef;
            --session-shadow: 0 4px 24px rgba(50, 50, 93, 0.08);
            --session-shadow-hover: 0 8px 32px rgba(50, 50, 93, 0.12);
        }

        body { background: var(--session-bg) !important; }

        .session-page {
            font-family: 'Inter', sans-serif;
            max-width: 960px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        /* ── Header Card ── */
        .session-header {
            background: linear-gradient(135deg, var(--session-primary), var(--session-accent));
            border-radius: 1.25rem;
            padding: 2rem;
            color: white;
            position: relative;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(94, 114, 228, 0.3);
            margin-bottom: 1.5rem;
        }
        .session-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -30%;
            width: 400px;
            height: 400px;
            background: rgba(255,255,255,0.06);
            border-radius: 50%;
        }
        .session-header::after {
            content: '';
            position: absolute;
            bottom: -60%;
            left: -20%;
            width: 300px;
            height: 300px;
            background: rgba(255,255,255,0.04);
            border-radius: 50%;
        }
        .session-header-content {
            position: relative;
            z-index: 1;
        }
        .session-header .people-row {
            display: flex;
            gap: 2rem;
            flex-wrap: wrap;
        }
        .session-header .person {
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .person-avatar {
            width: 48px;
            height: 48px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.1rem;
            font-weight: 700;
            background: rgba(255,255,255,0.2);
            backdrop-filter: blur(10px);
            border: 2px solid rgba(255,255,255,0.3);
        }
        .person-info small {
            opacity: 0.75;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .person-info strong {
            display: block;
            font-size: 1.05rem;
            font-weight: 600;
        }

        /* ── Timer ── */
        .session-timer-container {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255,255,255,0.15);
        }
        .timer-display {
            font-size: 2.5rem;
            font-weight: 800;
            font-variant-numeric: tabular-nums;
            letter-spacing: 2px;
            line-height: 1;
        }
        .timer-label {
            font-size: 0.8rem;
            opacity: 0.75;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        .timer-pulse {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #2dce89;
            animation: pulse 1.5s ease-in-out infinite;
            box-shadow: 0 0 12px rgba(45, 206, 137, 0.5);
        }
        @@keyframes pulse {
            0%, 100% { transform: scale(1); opacity: 1; }
            50% { transform: scale(1.3); opacity: 0.6; }
        }

        /* ── Cards ── */
        .session-card {
            background: var(--session-card);
            border-radius: 1rem;
            padding: 1.5rem;
            box-shadow: var(--session-shadow);
            margin-bottom: 1.25rem;
            border: 1px solid var(--session-border);
            transition: box-shadow 0.3s ease;
        }
        .session-card:hover {
            box-shadow: var(--session-shadow-hover);
        }
        .session-card-title {
            font-size: 0.8rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 0.8px;
            color: var(--session-text-muted);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .session-card-title i {
            color: var(--session-primary);
        }

        /* ── Training Items ── */
        .training-entry {
            background: #f8f9fe;
            border-radius: 0.75rem;
            padding: 1.25rem;
            margin-bottom: 0.75rem;
            border: 1px solid #edf0f7;
            position: relative;
            animation: slideIn 0.3s ease;
        }
        @@keyframes slideIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .training-entry .training-number {
            position: absolute;
            top: -8px;
            left: 12px;
            background: var(--session-primary);
            color: white;
            width: 24px;
            height: 24px;
            border-radius: 50%;
            font-size: 0.7rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .training-entry .remove-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            background: none;
            border: none;
            color: #adb5bd;
            cursor: pointer;
            font-size: 1rem;
            transition: color 0.2s;
            padding: 4px 8px;
        }
        .training-entry .remove-btn:hover {
            color: #f5365c;
        }

        /* ── Form Controls ── */
        .session-select, .session-input, .session-textarea {
            border: 1.5px solid var(--session-border);
            border-radius: 0.6rem;
            padding: 0.6rem 0.85rem;
            font-size: 0.9rem;
            font-family: 'Inter', sans-serif;
            transition: border-color 0.2s, box-shadow 0.2s;
            width: 100%;
            background: white;
        }
        .session-select:focus, .session-input:focus, .session-textarea:focus {
            border-color: var(--session-primary);
            box-shadow: 0 0 0 3px rgba(94, 114, 228, 0.12);
            outline: none;
        }
        .session-textarea {
            min-height: 120px;
            resize: vertical;
        }
        .session-label {
            font-size: 0.78rem;
            font-weight: 600;
            color: var(--session-text);
            margin-bottom: 0.35rem;
            display: block;
        }

        /* ── Add Training Button ── */
        .add-training-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            width: 100%;
            padding: 0.75rem;
            border: 2px dashed #d6d9e6;
            border-radius: 0.75rem;
            background: transparent;
            color: var(--session-primary);
            font-weight: 600;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        .add-training-btn:hover {
            border-color: var(--session-primary);
            background: rgba(94, 114, 228, 0.04);
        }

        /* ── Bottom Bar ── */
        .session-bottom-bar {
            position: sticky;
            bottom: 0;
            background: rgba(255,255,255,0.95);
            backdrop-filter: blur(12px);
            border-top: 1px solid var(--session-border);
            padding: 1rem 1.5rem;
            margin: 0 -1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            box-shadow: 0 -4px 24px rgba(0,0,0,0.05);
            border-radius: 0 0 1rem 1rem;
        }
        .btn-finish-session {
            background: linear-gradient(135deg, var(--session-success), #28b675);
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 0.75rem;
            font-weight: 700;
            font-size: 0.95rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            box-shadow: 0 4px 12px rgba(45, 206, 137, 0.3);
            transition: all 0.3s;
        }
        .btn-finish-session:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(45, 206, 137, 0.4);
        }
        .btn-back {
            background: transparent;
            border: 1.5px solid var(--session-border);
            padding: 0.6rem 1.25rem;
            border-radius: 0.6rem;
            color: var(--session-text-muted);
            font-weight: 600;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-back:hover {
            border-color: var(--session-text-muted);
            color: var(--session-text);
        }

        /* ── Counters ── */
        .counter-group {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .counter-group .counter-btn {
            width: 32px;
            height: 32px;
            border-radius: 0.5rem;
            border: 1.5px solid var(--session-border);
            background: white;
            color: var(--session-text);
            font-weight: 700;
            font-size: 1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.15s;
        }
        .counter-group .counter-btn:hover {
            border-color: var(--session-primary);
            color: var(--session-primary);
        }
        .counter-group .counter-value {
            width: 48px;
            text-align: center;
            font-weight: 700;
            font-size: 1.1rem;
            color: var(--session-text);
        }

        /* ── Responsive ── */
        @@media (max-width: 600px) {
            .session-header .people-row { flex-direction: column; gap: 1rem; }
            .timer-display { font-size: 2rem; }
            .session-page { padding: 0.75rem; }
        }
    </style>
}

@section scripts {
    <script src="/Pages/Session/record.js"></script>
}

<div class="session-page">
    <!-- ═══ SESSION HEADER ═══ -->
    <div class="session-header">
        <div class="session-header-content">
            <div class="people-row">
                <div class="person">
                    <div class="person-avatar"><i class="fa fa-user"></i></div>
                    <div class="person-info">
                        <small>Paciente</small>
                        <strong>@Model.PatientName</strong>
                    </div>
                </div>
                <div class="person">
                    <div class="person-avatar"><i class="fa fa-user-md"></i></div>
                    <div class="person-info">
                        <small>Terapeuta</small>
                        <strong>@Model.TherapistName</strong>
                    </div>
                </div>
            </div>
            <div class="session-timer-container">
                <div class="timer-pulse"></div>
                <div>
                    <div class="timer-label">Tempo de sessão</div>
                    <div class="timer-display" id="sessionTimer">00:00:00</div>
                </div>
            </div>
        </div>
    </div>

    <form id="sessionForm" method="post">
        <input type="hidden" asp-for="SessionData.ConsultationId" />
        <input type="hidden" name="SessionData.Duration" id="sessionDuration" />

        <!-- ═══ OBJECTIVE SELECTION ═══ -->
        <div class="session-card">
            <div class="session-card-title">
                <i class="fa fa-bullseye"></i> Objetivo da Sessão
            </div>
            <label class="session-label">Selecione o objetivo trabalhado</label>
            <select asp-for="SessionData.ObjectiveId" asp-items="@Model.ObjectiveLookup"
                    class="session-select" id="objectiveSelect">
                <option value="">Selecione um objetivo...</option>
            </select>
        </div>

        <!-- ═══ PERFORMED TRAININGS ═══ -->
        <div class="session-card">
            <div class="session-card-title">
                <i class="fa fa-dumbbell"></i> Treinos Realizados
            </div>
            <div id="trainingsContainer">
                <!-- JS adds training items here -->
            </div>
            <button type="button" class="add-training-btn" id="addTrainingBtn">
                <i class="fa fa-plus"></i> Adicionar treino
            </button>
        </div>

        <!-- ═══ SESSION NOTES ═══ -->
        <div class="session-card">
            <div class="session-card-title">
                <i class="fa fa-sticky-note"></i> Notas da Sessão
            </div>
            <textarea asp-for="SessionData.Description" class="session-textarea"
                      placeholder="Observações sobre a sessão, comportamento do paciente, progressos notados..."></textarea>
        </div>

        <!-- ═══ BOTTOM BAR ═══ -->
        <div class="session-bottom-bar">
            <a href="/Calendar" class="btn-back">
                <i class="fa fa-arrow-left me-1"></i> Voltar ao calendário
            </a>
            <button type="submit" class="btn-finish-session" id="finishSessionBtn">
                <i class="fa fa-check-circle"></i> Finalizar Sessão
            </button>
        </div>
    </form>
</div>

<!-- Hidden config for JS -->
<script>
    window.__sessionConfig = {
        consultationId: '@Model.Consultation.Id',
        consultationStart: '@Model.Consultation.DateTime.ToString("o")',
        appointmentDuration: @Model.AppointmentDurationMinutes,
        patientId: '@Model.Consultation.PatientId'
    };
</script>
