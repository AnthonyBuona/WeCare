@page
@model WeCare.Web.Pages.Tratamentos.IndexModel
@using Microsoft.AspNetCore.Authorization
@using WeCare.Permissions
@inject IAuthorizationService Authorization
@using WeCare.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<WeCareResource> L
@section scripts {
    <abp-script src="/Pages/Tratamentos/index.js" />
}

<div class="row mb-4 align-items-center justify-content-between">
    <div class="col-md-6 col-12 mb-3 mb-md-0">
        <div class="d-flex align-items-center">
            <div class="icon-shape bg-gradient-info text-white rounded-circle shadow me-3">
                <i class="fa fa-stethoscope"></i>
            </div>
            <div>
                <h2 class="mb-0 text-dark fw-bold">@L["Tratamentos"]</h2>
                <p class="text-muted mb-0">Gerencie os planos de tratamento dos pacientes</p>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-12 text-md-end">
        @if (await Authorization.IsGrantedAsync(WeCarePermissions.Tratamentos.Create))
        {
            <button id="NewTratamentoButton" class="btn btn-premium btn-lg px-4 rounded-pill shadow-sm">
                <i class="fa fa-plus me-2"></i> @L["NewTratamento"].Value
            </button>
        }
    </div>
</div>

<div class="card border-0 shadow-sm rounded-3 overflow-hidden">
    <div class="card-body p-0">
        <div class="table-responsive">
            <abp-table id="TratamentosTable" class="table align-items-center table-flush table-hover mb-0" />
        </div>
    </div>
</div>